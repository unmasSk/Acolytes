{
  "model": "sonnet",
  "agents": {
    "defaultModel": "sonnet",
    "coordinatorModel": "sonnet", 
    "orchestratorModel": "opus",
    "specialistModel": "sonnet"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ClaudeSquad Memory System Active'"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*-agent$|engineer-.*|coordinator-.*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Agent completed'"
          }
        ]
      }
    ]
  },
  "mcp": {
    "servers": {},
    "defaultTimeout": 30
  },
  "permissions": {
    "allow": [
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob"
    ]
  }
}